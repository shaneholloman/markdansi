{
  "name": "markdansi",
  "version": "0.1.0",
  "description": "Tiny dependency-light markdown to ANSI converter.",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js"
    },
    "./cli": "./src/cli.js"
  },
  "bin": {
    "markdansi": "./src/cli.js"
  },
  "scripts": {
    "build": "pnpm lint && pnpm test",
    "clean": "rm -rf dist",
    "lint": "node --check src/index.js src/cli.js src/render.js src/wrap.js src/hyperlink.js src/parser.js",
    "test": "vitest run"
  },
  "keywords": [
    "markdown",
    "ansi",
    "terminal",
    "cli"
  ],
  "engines": {
    "node": ">=22"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-gfm": "^3.1.0",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "micromark-util-combine-extensions": "^2.0.1",
    "string-width": "^7.1.0",
    "strip-ansi": "^7.1.0",
    "supports-hyperlinks": "^3.2.0"
  },
  "devDependencies": {
    "vitest": "^4.0.0"
  }
}
