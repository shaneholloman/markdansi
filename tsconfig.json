{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"noPropertyAccessFromIndexSignature": true,
		"allowJs": true,
		"checkJs": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "test/**/*", "docs/**/*"],
	"exclude": ["node_modules", "dist"]
}
