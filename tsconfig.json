{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"noPropertyAccessFromIndexSignature": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "coverage"]
}
